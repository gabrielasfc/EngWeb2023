    header.w3-container.w3-teal
      h1 Aluno #{a.id}
    .w3-container
        ul.w3-ul.w3-card-4(style="width:50%")
            li #[b Nome: ] #{a.nome}
            li #[b NÃºmero: ] #{a.id}
            li #[b Git: ] #[a(href="#{a.gitlink}") #{a.gitlink}] 
        fieldset
            each i in [1, 2, 3, 4, 5, 6, 7, 8]
                - var tpc = "tpc" + i
                - var isChecked = tpc in a
